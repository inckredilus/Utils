#!/bin/sh
# Build - installs scripts where they should run
# 

case "$1" in
  "") echo "Must specify a script in .../Prog/Utils"
  ;;
  x|xj) 
  cp $1 /storage/emulated/0/.
  ;;
  g) 
  cp $1 /storage/emulated/0/.
  cp $1 $HOME/bin/.
  ;;
  evnote|evnote.sh)
  cp evnote.sh $HOME/.shortcuts/.
  cp evnote_show.sh $HOME/bin/.
  echo "copied evnote* to \$HOME/.shortcuts and \$HOME/bin"
  chmod 750 $HOME/.shortcuts/evnote.sh
  chmod 750 $HOME/bin/evnote_show.sh
  ;;
  *) 
  if [ -f "$1" ]; then
    echo "No build defined for '$1'"
  else
    echo "No $1 in .../Utils directory"
  fi
  ;;
esac
